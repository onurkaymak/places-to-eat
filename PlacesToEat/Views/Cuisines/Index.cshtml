@{
  Layout = "_Layout";
}

@using PlacesToEat.Models;

@if (@Model.Count == 0)
{
 <h3>There are no cuisines listed, please add a cuisine</h3>
}

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>