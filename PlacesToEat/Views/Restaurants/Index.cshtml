@{
  Layout = "_Layout";
}

@using PlacesToEat.Models;

@if (@Model.Count == 0)
{
 <h3>There are no restaurants listed, please add a restaurant</h3>
}

<ul>
  @foreach(Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.Id })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>